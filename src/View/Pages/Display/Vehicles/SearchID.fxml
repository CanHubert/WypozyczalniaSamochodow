        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="searchTF" alignment="CENTER" maxWidth="200.0" prefWidth="200.0" promptText="Search by ID" />
                <Button maxWidth="200.0" mnemonicParsing="false" onAction="#searchByID" prefHeight="31.0" prefWidth="200.0" text="Search" />
                <Label fx:id="msg" alignment="CENTER" prefHeight="73.0" prefWidth="301.0" wrapText="true" />
                <Button layoutX="10.0" layoutY="209.0" maxWidth="200.0" mnemonicParsing="false" onAction="#back" prefHeight="31.0" prefWidth="200.0" text="Back" />
            </children>
        </VBox>
    </center>
    <left>
        <Region prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
