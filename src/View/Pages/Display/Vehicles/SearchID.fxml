<BorderPane prefHeight="475.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controllers.Display.Vehicles.SearchByIDController">
